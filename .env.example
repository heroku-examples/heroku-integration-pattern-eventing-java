# Heroku Redis Configuration (replace with your actual Redis URL)
REDIS_URL=redis://localhost:6379

# Heroku AppLink Integration (these will be injected by Heroku when deployed)
# For local testing, you'll need to set these to your actual Salesforce org values
# HEROKU_APP_NAME=your-app-name
# SALESFORCE_URL=https://your-domain.my.salesforce.com
# SALESFORCE_TOKEN=your-session-token

# Salesforce Pub/Sub API Configuration
SALESFORCE_PUBSUB_HOST=api.pubsub.salesforce.com
SALESFORCE_PUBSUB_PORT=7443
SALESFORCE_PUBSUB_TOPIC=/data/OpportunityChangeEvent
SALESFORCE_PUBSUB_REPLAY_PRESET=LATEST

# Spring Profile (use 'web' for Pub/Sub subscriber, 'worker' for background job processing)
SPRING_PROFILES_ACTIVE=web

# Web Server Port
PORT=8080
