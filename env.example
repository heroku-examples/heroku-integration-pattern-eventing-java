# Heroku Configuration
HEROKU_APP_ID=your-heroku-app-id

# Redis Configuration (automatically set by Heroku Key Value Store addon)
REDIS_URL=redis://localhost:6379

# Salesforce Connection Configuration (set by Heroku AppLink)
CONNECTION_NAMES=my-org

# Manual Salesforce Authentication (for debugging when AppLink is not available)
# These are populated by running: ./sfauth2env.sh my-org
SF_SESSION_ID=your-salesforce-session-id
SF_INSTANCE_URL=https://your-instance.my.salesforce.com
SF_API_VERSION=60.0
SF_ORG_ID=your-org-id

# Salesforce Pub/Sub API Configuration
SALESFORCE_PUBSUB_HOST=api.pubsub.salesforce.com
SALESFORCE_PUBSUB_PORT=7443
SALESFORCE_PUBSUB_TOPIC=/data/OpportunityChangeEvent
SALESFORCE_PUBSUB_REPLAY_PRESET=LATEST

# Batching Configuration
# Batch size: Number of events to collect before processing (default: 50)
SALESFORCE_PUBSUB_BATCH_SIZE=50

# Batch timeout: Maximum time in milliseconds to wait before processing incomplete batch (default: 5000ms = 5s)
SALESFORCE_PUBSUB_BATCH_TIMEOUT=5000

# Fetch size: Number of events to request from Pub/Sub API in each fetch (default: 100)
SALESFORCE_PUBSUB_FETCH_SIZE=100
